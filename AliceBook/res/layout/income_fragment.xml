<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/income_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
	<TextView 
	    android:id="@+id/income_display"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="40dp"
	    android:gravity="right"/>
	
	<LinearLayout 
	    android:id="@+id/income_calc_base"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:padding="30dp"
	    android:orientation="horizontal">

	    <TableLayout android:id="@+id/income_calc_table" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TableRow android:layout_weight="1" android:layout_height="0dp" android:layout_width="fill_parent" android:id="@+id/calcrow1">
               <TextView android:id="@+id/sign" android:text="+/-" android:clickable="true" android:background="@drawable/selector" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/seven" android:text="7" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/eight" android:text="8" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/nine" android:text="9" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/divide" android:text="*" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
            </TableRow>
            <TableRow android:layout_weight="1" android:layout_height="0dp" android:layout_width="wrap_content" android:id="@+id/calcrow2">
               <TextView android:id="@+id/clear" android:text="C" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/four" android:text="4" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/five" android:text="5" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/six" android:text="6" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/times" android:text="x" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
            </TableRow>
            <TableRow android:layout_weight="1" android:layout_height="0dp" android:layout_width="fill_parent" android:id="@+id/calcrow3">
               <TextView android:id="@+id/allclear" android:text="AC" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/one" android:text="1" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/two" android:text="2" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/three" android:text="3" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/minus" android:text="-" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
            </TableRow>
            <TableRow android:layout_weight="1" android:layout_height="0dp" android:layout_width="wrap_content" android:id="@+id/calcrow4">
               <TextView android:id="@+id/zero" android:text="0" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/doublezero" android:text="00" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/comma" android:text="." android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/equal" android:text="=" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
               <TextView android:id="@+id/plus" android:text="+" android:gravity="center" android:layout_height="match_parent" android:layout_width="0dp" android:layout_weight="1"/>
            </TableRow>
        </TableLayout>
	    
	    
	</LinearLayout>
    

</LinearLayout>